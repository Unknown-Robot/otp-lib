{
	"name": "@otp-lib/authenticator",
	"version": "0.2.1",
	"description": "TOTP (Time-based) and HOTP (HMAC-based) One-Time Password library",
	"typings": "./dist/otp-auth.d.ts",
	"module": "./dist/otp-auth.mjs",
	"main": "./dist/otp-auth.cjs",
	"files": [
		"dist"
	],
	"exports": {
		".": {
			"types": {
				"import": "./dist/otp-auth.d.mts",
				"require": "./dist/otp-auth.d.ts",
				"default": "./dist/otp-auth.d.ts"
			},
			"import": "./dist/otp-auth.mjs",
			"require": "./dist/otp-auth.cjs",
			"default": "./dist/otp-auth.cjs"
		}
	},
	"scripts": {
		"build": "tsup --tsconfig tsconfig.json",
		"test": "jest --config=jest.config.json"
	},
	"keywords": [
		"Multi-Factor Authentication",
		"Two-Factor Authentication",
		"Google Authenticator",
		"Yubico Authenticator",
		"RFC4226",
		"RFC6238",
		"HOTP",
		"TOTP",
		"OTP",
		"MFA",
		"2FA"
	],
	"author": {
		"name": "Unknown-Robot",
		"email": "mr.unknown.robot@gmail.com",
		"url": "https://github.com/Unknown-Robot"
	},
	"repository": {
		"type": "git",
		"directory": "packages/authenticator",
		"url": "https://github.com/Unknown-Robot/otp-lib.git"
	},
	"homepage": "https://github.com/Unknown-Robot/otp-lib/tree/main/packages/authenticator#readme",
	"bugs": {
		"url": "https://github.com/Unknown-Robot/otp-lib/issues",
		"email": "mr.unknown.robot@gmail.com"
	},
	"license": "MIT",
	"peerDependencies": {
		"@otp-lib/core": "^0.2.0"
	},
	"devDependencies": {
		"@otp-lib/core": "^0.2.0",
		"@types/node": "^24.10.1",
		"jest": "^30.2.0",
		"terser": "^5.44.1",
		"ts-jest": "^29.4.6",
		"ts-node": "^10.9.2",
		"tsup": "^8.5.0",
		"typescript": "^5.9.3"
	},
	"publishConfig": {
		"access": "public"
	}
}
