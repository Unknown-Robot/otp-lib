{
	"name": "@otp-lib/core",
	"version": "0.0.1",
	"description": "The core of OTP package",
	"typings": "./dist/otp-core.d.ts",
	"module": "./dist/otp-core.mjs",
	"main": "./dist/otp-core.cjs",
	"files": [
		"dist"
	],
	"exports": {
		"./utils": {
			"types": {
				"import": "./dist/utils/index.d.mts",
				"require": "./dist/utils/index.d.ts",
				"default": "./dist/utils/index.d.ts"
			},
			"import": "./dist/utils/index.mjs",
			"require": "./dist/utils/index.cjs",
			"default": "./dist/utils/index.cjs"
		},
		".": {
			"types": {
				"import": "./dist/otp-core.d.mts",
				"require": "./dist/otp-core.d.ts",
				"default": "./dist/otp-core.d.ts"
			},
			"import": "./dist/otp-core.mjs",
			"require": "./dist/otp-core.cjs",
			"default": "./dist/otp-core.cjs"
		}
	},
	"scripts": {
		"build": "tsup --tsconfig tsconfig.json",
		"test": "jest --config=jest.config.ts"
	},
	"keywords": [
		"Multi-Factor Authentication",
		"Two-Factor Authentication",
		"Google Authenticator",
		"Yubico Authenticator",
		"RFC4226",
		"RFC6238",
		"HOTP",
		"TOTP",
		"OTP",
		"MFA",
		"2FA"
	],
	"author": {
		"name": "Unknown-Robot",
		"email": "mr.unknown.robot@gmail.com",
		"url": "https://github.com/Unknown-Robot"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/Unknown-Robot/otp-lib.git"
	},
	"homepage": "https://github.com/Unknown-Robot/otp-lib#readme",
	"bugs": {
		"url": "https://github.com/Unknown-Robot/otp-lib/issues",
		"email": "mr.unknown.robot@gmail.com"
	},
	"license": "MIT",
	"devDependencies": {
		"@types/node": "^24.10.1",
		"jest": "^30.2.0",
		"terser": "^5.44.1",
		"ts-jest": "^29.4.5",
		"tsup": "^8.5.0",
		"typescript": "^5.9.3"
	},
	"publishConfig": {
		"access": "public"
	}
}
